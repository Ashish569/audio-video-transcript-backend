
# Server & Environment

PORT=5050
NODE_ENV=development

# Database PSQL Configuration

DB_USER=postgres
DB_HOST=localhost
DB_NAME=transcription_db
DB_PASSWORD=postgres
DB_PORT=5432

# File Upload Storage Paths

UPLOAD_TEMP_DIR=./uploads
UPLOAD_PROCESSED_DIR=./uploads/processed

# maximum upload size in bytes (20 GB = 20*1024*1024*1024)
# MAX_UPLOAD_SIZE=20*1024*1024*1024


# Frontend

FRONTEND_URL=http://localhost:5173

# Model size: tiny, base, small, medium, large
WHISPER_MODEL=medium

# Maximum concurrent processing jobs (to prevent overload)
MAX_CONCURRENT_PROCESSING=2

# Optional: log level (debug, info, warn, error)
LOG_LEVEL=debug
